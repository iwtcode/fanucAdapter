{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Main App",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/main.go",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Launch test function",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${file}",
            "args": [
                "-test.v",
                "-test.count=1"
            ]
        }
    ]
}